{
	"type": "module",
	"name": "frontend",
	"version": "0.0.1",
	"private": true,
	"engines": {
		"node": ">=16.16.0"
	},
	"scripts": {
		"dev": "CURRENT_GIT_HASH=$(git rev-parse HEAD) vite dev",
		"build": "CURRENT_GIT_HASH=$(git rev-parse HEAD) vite build",
		"start": "CURRENT_GIT_HASH=$(git rev-parse HEAD) HOST=127.0.0.1 PORT=5173 node -r dotenv/config ./build/index.js",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.1",
		"@sveltejs/adapter-node": "^2.0.1",
		"@sveltejs/kit": "^2.0.4",
		"@sveltejs/svelte-scroller": "^2.0.7",
		"@sveltejs/vite-plugin-svelte": "^3.0.1",
		"@tailwindcss/forms": "^0.5.7",
		"@tailwindcss/typography": "^0.5.10",
		"@types/lodash.debounce": "^4.0.9",
		"@types/node": "^20.10.5",
		"@typescript-eslint/eslint-plugin": "^6.15.0",
		"@typescript-eslint/parser": "^6.15.0",
		"autoprefixer": "^10.4.16",
		"dotenv": "^16.3.1",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-perfectionist": "^2.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"lodash.debounce": "^4.0.8",
		"postcss": "^8.4.32",
		"postcss-load-config": "^5.0.2",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"prettier-plugin-tailwindcss": "^0.5.9",
		"satori": "^0.10.11",
		"satori-html": "^0.3.2",
		"shiki": "^0.14.7",
		"svelte": "^4.2.8",
		"svelte-check": "^3.6.2",
		"svelte-inview": "^4.0.2",
		"svelte-meta-tags": "^3.1.0",
		"svelte-preprocess": "^5.1.3",
		"svg2png-wasm": "^1.4.1",
		"tailwindcss": "^3.4.0",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"vite": "^5.0.10"
	}
}