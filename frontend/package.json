{
	"type": "module",
	"name": "frontend",
	"version": "0.0.1",
	"private": true,
	"engines": {
		"node": ">=16.16.0"
	},
	"scripts": {
		"dev": "CURRENT_GIT_HASH=$(git rev-parse HEAD) vite dev",
		"build": "CURRENT_GIT_HASH=$(git rev-parse HEAD) vite build",
		"start": "CURRENT_GIT_HASH=$(git rev-parse HEAD) HOST=127.0.0.1 PORT=5173 node -r dotenv/config ./build/index.js",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/adapter-node": "^1.2.4",
		"@sveltejs/kit": "^1.20.2",
		"@tailwindcss/forms": "^0.5.3",
		"@tailwindcss/typography": "^0.5.9",
		"@types/node": "^20.7.2",
		"@typescript-eslint/eslint-plugin": "^5.59.11",
		"@typescript-eslint/parser": "^5.59.11",
		"autoprefixer": "^10.4.14",
		"dotenv": "^16.1.4",
		"eslint": "^8.42.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"postcss": "^8.4.24",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"prettier-plugin-tailwindcss": "^0.3.0",
		"satori": "^0.10.8",
		"satori-html": "^0.3.2",
		"svelte": "^3.59.1",
		"svelte-check": "^3.4.3",
		"svelte-meta-tags": "^2.8.0",
		"svelte-preprocess": "^5.0.4",
		"svg2png-wasm": "^1.4.0",
		"tailwindcss": "^3.3.2",
		"tslib": "^2.5.3",
		"typescript": "^5.1.3",
		"vite": "^4.3.9"
	},
	"dependencies": {
		"lodash.debounce": "^4.0.8",
		"shiki": "^0.14.2"
	}
}
